<ship-class>
	<identifier>transporter</identifier>
	<name>Transporter</name>
	<description>The transporter is the backbone of agriculture and industry, used to transport goods from producer to consumer.</description>
	<base-price>73000</base-price>
	<space-requirement>160000</space-requirement>
	<visualization>
		<model-identifier>transporter</model-identifier>
		<visualization-parts>
			<visualization-part>
				<part-identifier>hull</part-identifier>
				<style>
					<diffuse-color>
						<red>0.55</red>
						<green>0.55</green>
						<blue>0.65</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.55</red>
							<green>0.55</green>
							<blue>0.55</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>40.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
			<visualization-part>
				<part-identifier>faction</part-identifier>
				<style>
					<diffuse-color>
						<red>0.0</red>
