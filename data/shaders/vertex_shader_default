#version 330

uniform mat4 in_ProjectionMatrix;
uniform mat4 in_ViewMatrix;
uniform mat4 in_ModelMatrix;
uniform mat3 in_NormalMatrix;

layout(location = 0) in vec3 in_ModelPosition;
layout(location = 1) in vec3 in_ModelNormal;

out vec3 pass_WorldPosition;
out vec3 pass_WorldNormal;

void main()
{
    pass_WorldNormal = normalize(in_NormalMatrix * in_ModelNormal);
	vec4 WorldPosition = in_ModelMatrix * vec4(in_ModelPosition, 1.0f);
    pass_WorldPosition = vec3(WorldPosition);
    gl_Position = in_ProjectionMatrix * in_ViewMatrix * WorldPosition;
}
