<ship-class>
	<identifier>fighter</identifier>
	<name>Fighter</name>
	<description>A small and very lightly equipped space craft, that can also be used for courier runs.</description>
	<base-price>22000</base-price>
	<space-requirement>46000</space-requirement>
	<visualization>
		<model-identifier>fighter</model-identifier>
		<visualization-parts>
			<visualization-part>
				<part-identifier>hull</part-identifier>
				<style>
					<diffuse-color>
						<red>0.78</red>
						<green>0.76</green>
						<blue>0.78</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.65</red>
							<green>0.65</green>
							<blue>0.65</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>30.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
			<visualization-part>
				<part-identifier>cockpit</part-identifier>
				<style>
					<diffuse-color>
						<red>0.0</red>
						<green>0.0</green>
						<blue>0.0</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>1.0</red>
							<green>1.0</green>
							<blue>1.0</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>80.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
			<visualization-part>
				<part-identifier>faction</part-identifier>
				<style>
					<diffuse-color>
						<red>0.0</red>
						<green>0.0</green>
						<blue>0.0</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.5</red>
							<green>0.5</green>
							<blue>0.5</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>80.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
		</visualization-parts>
	</visualization>
	<forward-thrust>23</forward-thrust>
	<turn-speed>2.3</turn-speed>
	<maximum-speed>21.2</maximum-speed>
	<maximum-available-space>2000</maximum-available-space>
	<fuel-hold-size>1</fuel-hold-size>
	<jump-fuel>0.09</jump-fuel>
	<forward-fuel>0.012</forward-fuel>
	<turn-fuel>0.003</turn-fuel>
	<hull>64</hull>
	<exhaust-position>
		<part-identifier>hull</part-identifier>
		<marker-identifier>exhaust</marker-identifier>
	</exhaust-position>
	<exhaust-radius>0.3</exhaust-radius>
	<slots>
		<slot>
			<identifier>front_gun</identifier>
			<class-identifier>light_weapon</class-identifier>
			<name>Front Gun</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>front_gun_slot</marker-identifier>
			<visualize-accessory>true</visualize-accessory>
		</slot>
		<slot>
			<identifier>battery</identifier>
			<class-identifier>light_battery</class-identifier>
			<name>Battery</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>battery_slot</marker-identifier>
			<visualize-accessory>false</visualize-accessory>
		</slot>
		<slot>
			<identifier>generator</identifier>
			<class-identifier>small_generator</class-identifier>
			<name>Generator</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>generator_slot</marker-identifier>
			<visualize-accessory>false</visualize-accessory>
		</slot>
	</slots>
</ship-class>
