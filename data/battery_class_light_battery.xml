<battery-class>
	<identifier>light_battery</identifier>
	<name>Light Battery</name>
	<description>The light battery provides a small energy capacitor for space crafts.</description>
	<base-price>1300</base-price>
	<space-requirement>80</space-requirement>
	<visualization>
		<model-identifier>light_battery</model-identifier>
		<visualization-parts>
			<visualization-part>
				<part-identifier>light_battery</part-identifier>
				<style>
					<diffuse-color>
						<red>0.5</red>
						<green>0.8</green>
						<blue>0.5</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>false</valid>
						<value>
							<red>0.0</red>
							<green>0.0</green>
							<blue>0.0</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>40.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
		</visualization-parts>
	</visualization>
	<energy-capacity>200</energy-capacity>
	<slot-class-identifier>light_battery</slot-class-identifier>
</battery-class>
