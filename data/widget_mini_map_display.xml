<mini-map-display>
	<widget>
		<widget-path>/mini_map</widget-path>
		<name>display</name>
		<position>
			<x>0</x>
			<y>20</y>
		</position>
		<use-size>true</use-size>
		<size>
			<x>220</x>
			<y>220</y>
		</size>
		<use-background-color>false</use-background-color>
		<background-color>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
			<alpha>0</alpha>
		</background-color>
		<visible>true</visible>
		<anchor-bottom>true</anchor-bottom>
		<anchor-left>true</anchor-left>
		<anchor-right>true</anchor-right>
		<anchor-top>true</anchor-top>
	</widget>
</mini-map-display>
