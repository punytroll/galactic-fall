<generator-class>
	<identifier>small_generator</identifier>
	<name>Small Generator</name>
	<description>The small generator provides barely enough energy to keep a small space craft running and occasionally firing a cannon for self defense.</description>
	<base-price>2500</base-price>
	<space-requirement>500</space-requirement>
	<visualization>
		<model-identifier>small_generator</model-identifier>
		<visualization-parts>
			<visualization-part>
				<part-identifier>body</part-identifier>
				<style>
					<diffuse-color>
						<red>0.8</red>
						<green>0.3</green>
						<blue>0.2</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.9</red>
							<green>0.8</green>
							<blue>0.8</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>80.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
		</visualization-parts>
	</visualization>
	<maximum-power-output>1.5</maximum-power-output>
	<slot-class-identifier>small_generator</slot-class-identifier>
</generator-class>
