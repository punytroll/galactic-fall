<ship-class>
	<identifier>shuttle</identifier>
	<name>Shuttle</name>
	<description>The small shuttle is the entry into space trade for most aspiring entrepreneurs.</description>
	<base-price>18000</base-price>
	<space-requirement>60000</space-requirement>
	<visualization>
		<model-identifier>shuttle</model-identifier>
		<visualization-parts>
			<visualization-part>
				<part-identifier>hull</part-identifier>
				<style>
					<diffuse-color>
						<red>0.5</red>
						<green>0.55</green>
						<blue>0.58</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.45</red>
							<green>0.45</green>
							<blue>0.45</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>40.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
			<visualization-part>
				<part-identifier>faction</part-identifier>
				<style>
					<diffuse-color>
						<red>0.0</red>
						<green>0.0</green>
						<blue>0.0</blue>
						<opacity>1.0</opacity>
					</diffuse-color>
					<specular-color>
						<valid>true</valid>
						<value>
							<red>0.5</red>
							<green>0.5</green>
							<blue>0.5</blue>
							<opacity>1.0</opacity>
						</value>
					</specular-color>
					<shininess>
						<valid>true</valid>
						<value>80.0</value>
					</shininess>
					<program-identifier>default</program-identifier>
				</style>
			</visualization-part>
		</visualization-parts>
	</visualization>
	<forward-thrust>10</forward-thrust>
	<turn-speed>1</turn-speed>
	<maximum-speed>12</maximum-speed>
	<maximum-available-space>12000</maximum-available-space>
	<fuel-hold-size>1</fuel-hold-size>
	<jump-fuel>0.25</jump-fuel>
	<forward-fuel>0.025</forward-fuel>
	<turn-fuel>0.010</turn-fuel>
	<hull>100</hull>
	<exhaust-position>
		<part-identifier>hull</part-identifier>
		<marker-identifier>exhaust</marker-identifier>
	</exhaust-position>
	<exhaust-radius>0.5</exhaust-radius>
	<slots>
		<slot>
			<identifier>backboard_gun</identifier>
			<class-identifier>light_weapon</class-identifier>
			<name>Backboard Gun</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>backboard_gun_slot</marker-identifier>
			<visualize-accessory>true</visualize-accessory>
		</slot>
		<slot>
			<identifier>starboard_gun</identifier>
			<class-identifier>light_weapon</class-identifier>
			<name>Starboard Gun</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>starboard_gun_slot</marker-identifier>
			<visualize-accessory>true</visualize-accessory>
		</slot>
		<slot>
			<identifier>battery</identifier>
			<class-identifier>light_battery</class-identifier>
			<name>Battery</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>battery_slot</marker-identifier>
			<visualize-accessory>false</visualize-accessory>
		</slot>
		<slot>
			<identifier>generator</identifier>
			<class-identifier>small_generator</class-identifier>
			<name>Generator</name>
			<marker-part-identifier>hull</marker-part-identifier>
			<marker-identifier>generator_slot</marker-identifier>
			<visualize-accessory>false</visualize-accessory>
		</slot>
	</slots>
</ship-class>
