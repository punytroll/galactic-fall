#! /bin/bash

if [ "$1" = "--help" ]; then
	echo "CXXFLAGS = "
	echo "LDFLAGS = "
	exit 1
fi

if [ $# -eq 0 -a -e configuration ]; then
	cat configuration
	exit 0
fi

echo "# configuration generated by configure and read by Makefile." > configuration
echo >> configuration

for option in "$@"; do
	case $option in
	
	CXXFLAGS=*)
		echo "CXXFLAGS = `echo $option | sed -e s/^CXXFLAGS=//`" >> configuration
		;;
	
	LDFLAGS=*)
		echo "LDFLAGS = `echo $option | sed -e s/^LDFLAGS=//`" >> configuration
		;;
	
	esac
	
echo >> configuration
done
