#! /bin/bash

if [ $1 = "--help" ]; then
	echo "CXXFLAGS = "
	exit 1
fi

echo "# configuration generated by configure and read by Makefile." > configuration
echo >> configuration

for option in "$@"; do
	case $option in
	
	CXXFLAGS=*)
		echo "CXXFLAGS = `echo $option | sed -e s/.*=//`" >> configuration
		;;
	
	esac
	
echo >> configuration
done
